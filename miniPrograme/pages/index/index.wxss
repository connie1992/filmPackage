.movieInfo {
  padding: 0 0 10px 0;
  display: flex;
  align-content: space-around;
  flex-wrap: wrap;
  height: 60px;
  width: 100%;
  box-sizing: border-box;
}

.movieInfo .movieName {
  width: 100%;
  font-size: 15px;
}

.movieInfo .movieTime {
  font-size: 13px;
}

.number {
  width: 20px;
  /* border: 3px solid black;
   */
  background-color: #fff;
  display: flex;
  align-items: center;
  position: absolute;
}

.area {
  height: 300px;
  width: 300px;
  /* border: 1px solid red; */
  overflow: hidden;
  position: relative;
}

.seat {
  height: 100%;
  width: 100%;
  /* border: 1px solid green; */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
}

.footer {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-end;
  box-sizing: border-box;
  padding-bottom: 20px;
  height: 170px;
}

.footer .legend {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  height: 30px;
}
.footer .legend .item {
  width: 70px;
  display: flex;
  justify-content: center;
  position: relative;
 
}

.footer .phoneInfo {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  height: 50px;
  align-items: center;
}

.footer .selectInfo {
  width: 100%;
  height: 25px;
  display: flex;
  align-items: center;
}

.footer .submit {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.item {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
}
