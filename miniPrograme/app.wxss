/**app.wxss**/
.wraper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  font-size: 14px;
}

.container {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: rgb(247, 247, 247);
  flex-wrap: wrap;
  overflow: auto;
 
} 


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}